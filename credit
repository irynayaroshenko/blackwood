#include <stdio.h>
#include <cs50.h>
#include <math.h>

long inp_nmb, dgts;
int count, a, b;
int main(void)

{
    // get card number from a customer
    inp_nmb = get_long("Input number: ");

    // count digits in a card number
    count = 0;
    while (inp_nmb > 0)
    {
        inp_nmb = inp_nmb / 10;
        count++;
    }

    // myltiply by 2 second-to-last digit
    dgts = inp_nmb;
    dgts = dgts / 10;
    if (count == 13)
    {
        while (dgts > 0)
        {
            a = dgts % 10;
            b = a * 2;
        }
        printf("%i\n", b);
    }
    
    else if (count == 15)   
    {
        printf("AMEX\n");
    }
     
    else if (count == 16)
    {
        printf("16\n");
    }
 
    else
    {
        printf("INVALID\n");
    }
}  
